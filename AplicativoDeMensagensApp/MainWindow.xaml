<Window x:Class="AplicativoDeMensagensApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicativoDeMensagensApp"
        mc:Ignorable="d"
        Title="App de mensagens" Height="200" Width="300">
    <Grid>
        <Menu>
            <MenuItem Header="Conversas">
                <MenuItem Header="Grupos..." Click="Grupo_Click" />
                <MenuItem Header="Contatos..." Click="Contato_Click" />
            </MenuItem>
            <MenuItem Header="Operações">
                <MenuItem Header="Adicionar contato..." Click="AddContato_Click" />
                <MenuItem Header="Listar membros..." Click="ListMembros_Click" />
                <MenuItem Header="Listar grupos..." Click="ListGrupos_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
